<section class="container">
  <h1 class="category-name">{{categories}}</h1>
  <div class="card">
    {{#each inventories}}
      <div class="inventory block">
        <img src="{{image}}" alt="" />
        <span class="item-name">
          <h2>{{name}}</h2>
        </span>
        <br />
        <div id="item-info-block">
          <div id="price-count">
            <span class="item-price">
              <h3>${{price}}</h3>
            </span>
            <span class="item-counts">
              <h3 id="inventory-counter">Counts:
                <span id="inventory-counts">{{counts}}</span></h3>
            </span>
            <br />
          </div>
          <a class="button" href="/stockhome/inventories/{{id}}">View detail</a>
        </div>
        {{!-- <span class="display-none item-description ">
          <h3>{{description}}</h3>
        </span> --}}
        <br />
      </div>
    {{/each}}
  </div>
</section>