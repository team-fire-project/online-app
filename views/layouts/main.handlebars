<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://fonts.googleapis.com/css2?family=Mulish:wght@200;300;400;500;600;900&display=swap"
      rel="stylesheet"
    />
    <script
      src="https://kit.fontawesome.com/ef29d1f433.js"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="/style.css" />
    <title>Document</title>
  </head>
  <body>
    {{! Navbar }}
    <nav>
      <div class="menu-icon" >
        <span id="#mobile-menu" id="bars" class="fas fa-bars"></span>
      <div class="logo"> <a href="/stockhome/inventories/">StockHome.</a></div>
      </div>
      <div class="logo hidden"> <a href="/stockhome/inventories/">StockHome.</a></div>
      <div class="nav-items" id="nav-menu">
        <li><a href="/stockhome/inventories/">All Inventory</a></li>
        <li><a
            href="/stockhome/inventories/categories/electronics"
          >Electronics</a></li>
        <li><a
            href="/stockhome/inventories/categories/jewelery"
          >Jewelery</a></li>
        <li><a href="/stockhome/inventories/categories/men's%20clothing">Men's
            Clothing</a></li>
        <li><a
            href="/stockhome/inventories/categories/women's%20clothing"
          >Women's Clothing</a></li>
        {{#if guest}}
          <li class="add-item-list"><a href="/stockhome/signin">Login</a></li>
        {{/if}}
        {{#if admin}}
          <li class="add-item-list"><a href="/stockhome/add-inventory-form">Add
              Item</a></li>
          <li class="add-item-list"><a href="/stockhome/logout">Sign out</a></li>
        {{/if}}
        {{#if shopper}}
          <li class="add-item-list"><a href="/stockhome/logout">Sign out</a></li>
        {{/if}}
      </div>

      <div class="cta-container">
        <div class="cta">
          <form method="get">
            <button
              type="submit"
              onclick="getSearch()"
              class="fas fa-search"
            ></button>
            <input
              type="search"
              class="search-data"
              id="search-input"
              onkeyup="getSearch()"
              placeholder="Search Items"
              required
            />
          </form>
        </div>
        {{#if guest}}
          <button class="add-item"><a
              href="/stockhome/signin"
            >Login</a></button>
        {{/if}}
        {{#if admin}}
          <button class="add-item"><a href="/stockhome/add-inventory-form">Add
              Item</a></button>
          <button class="add-item"><a href="/stockhome/logout">Sign out</a></button>
        {{/if}}
        {{#if shopper}}
          <button class="add-item"><a href="/stockhome/logout">Sign out</a></button>
        {{/if}}

      </div>

    </nav>

    <div id="page-container">
      {{! Individual page content }}
      {{{body}}}

      {{! Footer }}
      <footer id="footer">
        <div class="logo">
          <a href="/stockhome/inventories/">StockHome.</a></div>
        <div class="line-break"></div>

        <div class="footer-info">
          <h6 class="copy-right">Â© 2022 StockHome. All rights reserved</h6>
          <a class="button" href="/stockhome/helpcenter"><h6>Help Center</h6></a>
        </div>
      </footer>
    </div>
    <script src="/script.js"></script>
  </body>
</html>