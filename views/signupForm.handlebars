{{!-- Left div : SignUp form --}}
<h2>Sign Up now!</h2>
<form action="/stockhome/signup" method="post">
  <label for="emailaddress">Email address</label>
  <input
    type="text"
    id="emailaddress"
    name="emailaddress"
    placeholder="Enter your email"
    required
  />
  <br />
  <label for="password">Password</label>
  <input
    type="password"
    id="password"
    name="password"
    placeholder="*********"
    required
  />
  <br />
  <label for="confirm">Confirm Password</label>
  <input
    type="password"
    id="confirm"
    name="confirm"
    placeholder="*********"
    required
  />
  <br />
  <button type="submit">Sign Up</button>
</form>
<h3>{{alert}}</h3>
